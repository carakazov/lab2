<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>navigateServlet</servlet-name>
        <servlet-class>Servlets.NavigateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>navigateServlet</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>Servlets.ShowAndCreateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteAndModify</servlet-name>
        <servlet-class>Servlets.DeleteAndModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteAndModify</servlet-name>
        <url-pattern>/change</url-pattern>
    </servlet-mapping>
</web-app>